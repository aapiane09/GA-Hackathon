<!-- SHOW ONE EVENT -->

<div class="container">

  <div class="row">
    <div class="col-md-9">
      <h2 id="eventshowheader"><%= @event.event_name %></h2>

      <h2>SUPER COOL IDEAS!</h2>
      <hr>
      <% @event.ideas.order(:cached_weighted_average => :desc).reverse.each do |idea| %>
          <h4><%= link_to idea.title, idea %><br>
            Submitted <%= time_ago_in_words(idea.created_at) %> ago
            by <%= idea.user.username  %>
          </h4>
          <h5> <%= idea.content  %> </h5>
          <%= link_to like_idea_path(idea), method: :put do %>
            Upvote
            <%= idea.get_upvotes.size %>
          <% end %>
          <hr>
      <% end %>
   </div>

   <!-- SIDE DISPLAY BAR -->
    <div class="col-md-3" id="eventshowsidebar">
      <img src="https://ga-core.s3.amazonaws.com/production/uploads/program/default_image/3969/thumb_Advanced-Topics-In-Excel.jpg" alt="computer" id="eventshowimage" height="250" width="350">
      <h4><span class="glyphicon glyphicon-calendar" aria-hidden="true"> </span><%= @event.date %></h4>
      <h5> &nbsp;&nbsp;10 am â€“ 5 pm PST </h5>
      <hr id="sidebreak">
      <h4><span class="glyphicon glyphicon-filter" aria-hidden="true"> </span> GA SF </h4>
      <h5>225 Bush Street, 5th Floor (East Entrance)</h5>
      <h5>  San Francisco, CA 94104</h5>

      <%= button_to "Add Idea", new_idea_path(@event), class: "btn btn-primary pic-large", method: "get" %>

      <% if !current_user %>
        <%= form_for([@event, @event.users.build]) do |f| %>
          <%= f.submit "RSVP", class: "btn btn-danger pic-large" %>
        <% end %>
      <% else %>
        <%= form_for([@event, @event.users.build]) do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <% if @event.users.include? current_user %>
            <%= f.submit "Happy Coding!", class: "btn btn-danger pic-large", disabled: "true" %>
          <% else %>
            <%= f.submit "RSVP", class: "btn btn-danger pic-large" %>
          <% end %>
        <% end %>
      <% end %>
      <h3>Hacker Count: <%= @event.users.count %> </h3>
  </div>
 </div>
</div>
