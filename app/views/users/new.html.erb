<!-- SIGNUP FORM PAGE -->
<div class="container">
  <div class="row">
    <div class="col-md-2 col-xs-2">

    </div>
    <div class="form-group col-md-8 col-xs-8">
      <h2 class="subtitle">SIGN UP</h2>
      <%= form_for @user do |f| %>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :first_name, class:"login_label" %>:
            <%= f.text_field :first_name, placeholder: "First Name" %>
          </div>
          <div class="col-md-6">
            <%= f.label :last_name, class:"login_label" %>:
            <%= f.text_field :last_name, placeholder: "Last Name" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :username, class:"login_label" %>:
            <%= f.text_field :username, placeholder: "Username" %>
          </div>
          <div class="col-md-6">
            <%= f.label :email, class:"login_label" %>:
            <%= f.email_field :email, placeholder: "Email" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :social_url, class:"login_label" %>:
            <%= f.text_field :social_url, placeholder: "Social" %>
          </div>
          <div class="col-md-6">
            <%= f.label :course, class:"login_label" %>:
            <%= f.text_field :course, placeholder: "Course" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :password, class:"login_label" %>:
            <%= f.password_field :password, placeholder: "Password" %>
          </div>
          <div class="col-md-6">
            <%= f.label :password_confirmation, class:"login_label" %>:
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
          </div>
        </div>
        <%= f.submit "Sign Up", class: "btn btn-danger" %>
      <% end %>


    </div>
    <div class="col-md-2 col-xs-2">

    </div>


  </div>
</div>
