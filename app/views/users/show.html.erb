<!-- USER PROFILE PAGE -->

<div class="container">
  <div class="row">

    <div class="col-md-2 col-xs-2">
      <hr>
      <%= image_tag "placeholder.png", class:"img-circle pic-large" %>
      <div class="card">
        <div class="card-block">
          <h3 class="card-title">Special title treatment</h3>
        </div>
      </div>
      <h4>Username: <%= @user.username %></h4>
      <h4>Email: <%= @user.email %></h4>
      <h4>Social: <%= @user.social_url %></h4>
      <h4>Class: <%= @user.course %></h4>

      <% if current_user == @user %>
        <%= button_to "Edit Profile", edit_user_path(@user), :method => :get, class:"btn btn-danger" %>
      <% end %>

    </div>
    <div class="col-md-6 col-xs-6 subtitle">
      <h1>Welcome, <%= @user.first_name %> <%= @user.last_name %>!</h1>
   </div>
   <div class="col-md-2 col-xs-2">

   </div>
 </div>
 <div class="row">
   <div class="col-md-10 col-md-10">
     <h2>Your IDEAS</h2>

     <% @user.ideas.each do |p| %>
     <h4><%= link_to "#{p.title}", idea_path(p)%></h4>
     <p><%=p.created_at.strftime("%b %d, %Y")%></p>
     <p style="margin-bottom: 40px;"><%= truncate p.content, length: 160 %></p>

     <% end %>
   </div>
 </div>
</div><!--CONTAINER  -->
