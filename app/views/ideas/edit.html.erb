<!-- EDIT IDEAS -->
<div class="col-md-2 col-xs-2">

</div>
<div class="form-group col-md-8 col-xs-8">
  <h2 class="subtitle">Edit Project Idea</h2>
    <%= form_for @idea do |f| %>
          <div>
            <%= f.label :title, class:"input_field_label" %>
            <%= f.text_field :title, placeholder: "Title" %>
          </div>
        <div>
          <%= f.label :description, class:"input_field_label" %>
          <%= f.text_field :content, placeholder: "Content"  %>
        </div>
        <div>
          <%= f.label :images, class:"input_field_label" %>
          <%= f.file_field :images, multiple:true %>
        </div>
      <%= f.submit "Submit", class:"btn btn-danger" %>
    <% end %>
  </div>
<div class="col-md-2 col-xs-2">

</div>
