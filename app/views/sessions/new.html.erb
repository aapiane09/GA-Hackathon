<div class="container">

  <div class="row">
    <div class="col-md-2 col-xs-2">

    </div>
    <div class="form-group col-md-8 col-xs-8">
      <div class="row">
        <h4 id="signupheader">LOGIN</h4>
      </div>
        <%= form_for @user, :url => sessions_path(@user) do |f| %>

          <div class="">
            <p class="login_label">Email</p>
            <%= f.email_field :email, placeholder: " Email", id:"form" %>
          </div>

          <div class="">
          <p class="login_label">Password</p>
            <%= f.password_field :password, placeholder: " Password", id:"form" %>
          </div>
          <div class="">
            <%= f.submit "Log In", class:'btn btn-danger btn-block' %>
          </div>
      <% end %>
    </div>
    <div class="col-md-2 col-xs-2">

    </div>
  </div>
</div>
